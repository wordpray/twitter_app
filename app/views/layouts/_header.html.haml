%header.navbar.navbar-fixed-top.navbar-default
  .container
    %header.nav
      .nav.navbar-nav.navbar-center
        = link_to image_tag("twitter.png", size:"30x30", alt:"twitter-logo", class: "twitter-logo"), root_url
      %ul.nav.navbar-nav.navbar-left
        %li= link_to "Home", root_url, class: "fa fa-home", aria:{hidden:"true"}
        %li= link_to "Global", users_path, class: "fa fa-globe", aria:{hidden: "true"}
      .collapse.navbar-collapse#navbarSupportedContent
        %ul.nav.navbar-nav.navbar-right.mr-auto
          - if user_signed_in?
            %li
              %form.form-inline#search-form
                %input.form-control.search-query{type: "text", placeholder: "Search","data-placement" => "bottom", "data-toggle" => "tooltip", :title => "インクリメンタルサーチ実装予定"}
                %button.fa.fa-search.fa-x{type: "submit", aria:{hidden:"true"}}
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                = image_tag current_user.avatar.url(:thumb), class: "user-profile__header"
              %ul.dropdown-menu
                %li= link_to "Profile", current_user
                %li= link_to "Settings", edit_user_registration_path
                %li.divider
                %li
                  = link_to "Log out", destroy_user_session_path, method: :delete
            %li
              %button.btn.btn-primary.btn-sm#tweet-button{"data-placement" => "bottom", "data-toggle" => "tooltip", :title => "モーダルウィンドウ実装予定","type"=> "submit"}
                Tweet
          - else
            %li= link_to "Log in", new_user_session_path

