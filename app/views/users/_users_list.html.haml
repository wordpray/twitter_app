- if user.wallpaper?
  = image_tag user.wallpaper.url(:thumb), class: "user-wallpaper", class: "user-wallpaper"
-else
  = image_tag("wallpaper.png", size:"300x100",alt:"user-wallpaper", class: "user-wallpaper")
- if user.avatar?
  = image_tag user.avatar.url(:thumb), class: "user-profile"
-else
  = image_tag("icon.png", size:"100x100",alt:"user-avatar", class: "user-profile")
%h1= user.name
%span= link_to "profile", user
- unless current_user?(user)
  #follow_form
    - if current_user.following?(user)
      = render 'shared/unfollow', user: user
    - else
      = render 'shared/follow', user: user
%p user.introduction
