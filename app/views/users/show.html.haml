- provide(:title, @user.name)

.row
  %aside.col-md-3
    %section.user_info
      = render 'shared/others_info', user: @user
    %section.stats
      = render 'shared/stats'
  .col-md-6
    %section.detail-info
      = render 'profile_header'
      %h3 Tweets
      -if @user.tweets.any?
        = @user.tweets.count
        %ol.tweets
          = render 'shared/tweet', tweets: @tweets
  .col-md-3
    %section.recommend_info
      = render 'shared/recommend_info', users: @recommend_users

