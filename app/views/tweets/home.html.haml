- provide(:title, "Home")

- if user_signed_in?
  .row
    %aside.col-md-4
      %section.user_info
        = render 'shared/user_info'
      %section.tweet_form
        = render 'shared/tweet_form'
    .col-md-8
      %h3 Tweet Feed
      - if @feed_items.any?
        %ol.tweets
        - @feed_items.each do |tweet|
          %li
            = tweet.content
-else
  .center.jumbotron
    %h1 Twitter App

    = link_to "Sign up", new_user_registration_path, class: "btn btn-lg btn-primary"

    = link_to image_tag("twitter.png", size:"30x30",alt:"Twitter logo"),"#"
