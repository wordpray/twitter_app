.reply_container
  %h3 Reply to #{@tweet.user.nickname}
  
  .before_reply
    - if @before_reply.present?
      = render 'reply', reply: @before_reply

  .micropost
    = render 'tweet'

  .reply_form
    = render 'reply_form'
      
  .after_replies
    - if @after_replies.any?
      - @after_replies.each do |reply|
        = render 'reply', reply: reply
