- if current_user.wallpaper?
  = image_tag current_user.wallpaper.url(:thumb), class: "user-wallpaper", class: "user-wallpaper"
-else
  = image_tag("wallpaper.png", size:"300x100",alt:"user-wallpaper", class: "user-wallpaper")
- if current_user.avatar?
  = image_tag current_user.avatar.url(:thumb), class: "user-profile"
-else
  = image_tag("icon.png", size:"100x100",alt:"user-avatar", class: "user-profile")
%h1= current_user.name
%span= link_to "view my profile", current_user
